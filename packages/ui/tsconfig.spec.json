{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2022"],
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "__tests__/**/*.spec.ts",
    "__tests__/**/*.spec.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.d.ts",
    "vitest-setup.d.ts"
  ]
}
